<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:id="@+id/square_ll">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/all"
        android:textSize="25dp"
        android:text="广场"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/sq_rank"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="排行榜\nRank"
                android:textColor="#fff"
                android:textSize="25dp"
                android:background="@drawable/shape"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:id="@+id/sq_comment"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="评论\ncomment"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:background="@drawable/dan"
                    />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/sq_scene"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="实景\npicture"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:background="@drawable/tao"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@android:color/holo_red_light"
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选活动"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LlaySquareNo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/activity"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="100dp"
                    android:id="@+id/iv1"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:id="@+id/tv1"
                    android:text="圣诞节枕头大战派对中奖名单公布"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LlaySquareNo2"
                android:orientation="vertical">
                <ImageView
                    android:background="@drawable/activity1"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="100dp"
                    android:id="@+id/iv2"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:id="@+id/tv2"
                    android:text="获奖名单：说说你的奇葩餐厅经历"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LlaySquareNo3"
                android:orientation="vertical">
                <ImageView
                    android:background="@drawable/activity2"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="100dp"
                    android:id="@+id/iv3"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:padding="10dp"
                    android:id="@+id/tv3"
                    android:text="一秒线上预定"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
